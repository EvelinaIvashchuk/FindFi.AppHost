{
  "ReverseProxy": {
    "Routes": {
      "aggregator": {
        "ClusterId": "aggregator",
        "Match": { "Path": "/api/aggregator/{**catchall}" },
        "Transforms": [ { "PathRemovePrefix": "/api/aggregator" } ]
      },
      "listings": {
        "ClusterId": "listings",
        "Match": { "Path": "/api/listings/{**catchall}" },
        "Transforms": [ { "PathRemovePrefix": "/api/listings" } ]
      },
      "bookings": {
        "ClusterId": "bookings",
        "Match": { "Path": "/api/bookings/{**catchall}" },
        "Transforms": [ { "PathRemovePrefix": "/api/bookings" } ]
      },
      "reviews": {
        "ClusterId": "reviews",
        "Match": { "Path": "/api/reviews/{**catchall}" },
        "Transforms": [ { "PathRemovePrefix": "/api/reviews" } ]
      }
    },
    "Clusters": {
      "aggregator": { "Destinations": { "d1": { "Address": "http://aggregator" } } },
      "listings":   { "Destinations": { "d1": { "Address": "http://localhost:5022" } } },
      "bookings":   { "Destinations": { "d1": { "Address": "http://localhost:5021" } } },
      "reviews":   { "Destinations": { "d1": { "Address": "http://localhost:5064" } } }
    }
  }
}