{
  "ReverseProxy": {
    "Routes": {
      "aggregator": {
        "ClusterId": "aggregator",
        "Match": { "Path": "/aggregator/{**catchall}" },
        "Transforms": [ { "PathRemovePrefix": "/aggregator" } ]
      },
      "listings": {
        "ClusterId": "listings",
        "Match": { "Path": "/listings/{**catchall}" },
        "Transforms": [ { "PathRemovePrefix": "/listings" } ]
      },
      "bookings": {
        "ClusterId": "bookings",
        "Match": { "Path": "/bookings/{**catchall}" },
        "Transforms": [ { "PathRemovePrefix": "/bookings" } ]
      }
    },
    "Clusters": {
      "aggregator": { "Destinations": { "d1": { "Address": "http://aggregator" } } },
      "listings":   { "Destinations": { "d1": { "Address": "http://localhost:5022" } } },
      "bookings":   { "Destinations": { "d1": { "Address": "http://localhost:5021" } } }
    }
  }
}